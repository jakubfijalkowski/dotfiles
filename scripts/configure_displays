#!/bin/sh

if [ -f ~/.local/display_settings ]; then
    source ~/.local/display_settings
else
    MAIN='eDP-1'
    EXTERNAL='DP-1'
    DEFAULT_MODE='ext-on-top'
fi

has_external=$(xrandr | grep "^$EXTERNAL connected \(primary \)\?3840x2160" 2>/dev/null || true)

if [[ $has_external != "" ]]; then
    if [[ "$DEFAULT_MODE" == "ext-on-top" ]]; then
        xrandr --output $EXTERNAL --primary --above $MAIN
    else
        echo "Unknown mode: $DEFAULT_MODE"
        exit 1
    fi
fi
