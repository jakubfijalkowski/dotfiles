menu-0-0 = 
menu-0-0-exec = "~/.local/bin/scripts/i3exit shutdown"
menu-0-1 = 
menu-0-1-exec = "~/.local/bin/scripts/i3exit reboot"
menu-0-2 = 
menu-0-2-exec = "~/.local/bin/scripts/i3exit logout"

